<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"></ImageView>



    <EditText
        android:layout_margin="10dp"
        android:id="@+id/signupactivity_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일 형식으로 입력해주세요"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/signupactivity_edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="네임"/>

        <Button
            android:layout_margin="10dp"
            android:id="@+id/id_check_button"
            android:text="id check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            ></Button>

    </RelativeLayout>
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/signupactivity_edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 8자 이상 입력해주세요!."/>
    <Button
        android:id="@+id/signupactivity_button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:text="회원가입"/>

</LinearLayout>